#!/usr/bin/env ruby
# frozen_string_literal: true

require 'command_kit'

class Notify < CommandKit::Command
  usage 'TITLE BODY [options]'

  option :time,
    short: '-t',
    value: {
      type: Integer,
      default: 8,
    },
    desc: 'Number of seconds for which to display the message. Only works on Linux.'

  option :icon,
    short: '-i',
    value: {
      type: String,
      default: 'information',
    },
    desc: 'Notification icon. Options: information|error. Only works on Linux.'

  argument :title,
    required: true,
    usage: 'TITLE',
    desc: 'Message title'

  argument :body,
    required: true,
    usage: 'BODY',
    desc: 'Message body'

  examples [
    '"Job completed" "bundle install"',
    '"Job completed" "bundle install" --time 60',
  ]

  description 'Display a pop-up desktop notification.'

  def run(title, body)
    if ENV['LINUX']
      command = "notify-send '#{title}' '#{body}' -i #{icon_path}"

      if (time = options[:time])
        command << " --expire-time=#{time}000"
      end

      system(command, exception: true)
    else
      system(
        %(osascript -e 'display notification "#{body}" with title "#{title}"'),
        exception: true,
      )
    end
  end

  private

  def icon_path
    "/usr/share/icons/Adwaita/96x96/status/dialog-#{options[:icon]}-symbolic.symbolic.png"
  end
end

Notify.start
